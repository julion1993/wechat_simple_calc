.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ccc;
    font-family: "Microsoft YaHei";
    overflow-x: hidden;
}

.middle {
  width: 100%;
  font-family: 微软雅黑;
  font-size: 30px;
  display: flex;
  flex-direction: row-reverse;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
}

.expression {
    text-align: right;
    width: 100%;
    line-height: 80rpx;
    padding: 0 3rpx;
    font-weight: bold;
    font-size: 20px;
    box-sizing: border-box;
}

.result {
    text-align: right;
    width: 100%;
    line-height: 165rpx;
    padding: 0 10rpx;
    font-weight: bold;
    font-size: 40px;
    box-sizing: border-box;
}

.buttom {
  width: 100%;
}

.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 5rem;
    background-color: #fff;
}

.button {
    width:25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 1px;
    margin-right: 1px;
}

.blue {
  background-color: lightblue;
}

.orange {
  background-color: orange;
}